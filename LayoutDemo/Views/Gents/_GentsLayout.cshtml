<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="container">
        <header>
            <ul class="bxslider">
                <li><img src="../../Content/images/gents_image/image1.jpg" alt="Slide"></li>
                <li><img src="../../Content/images/gents_image/image2.jpg" alt="Slide"></li>
                <li><img src="../../Content/images/gents_image/image3.jpg" alt="Slide"></li>
                <li><img src="../../Content/images/gents_image/image4.jpg" alt="Slide"></li>
                <li><img src="../../Content/images/gents_image/image5.jpg" alt="Slide"></li>
                <li><img src="../../Content/images/gents_image/image6.jpg" alt="Slide"></li>
                <li><img src="../../Content/images/gents_image/image7.jpg" alt="Slide"></li>
                <li><img src="../../Content/images/gents_image/image8.jpg" alt="Slide"></li>
            </ul>
            @Html.Partial("Menu")
        </header>
        <br />
        <br />
        <div id="pageContainer">
            @RenderBody()
        </div>
    </div>
    <script>       
        $('.bxslider').bxSlider({
            minSlides: 4,
            maxSlides: 50,
            slideWidth: 250,
            ticker: true,
            speed: 40000
        });
    </script>
</body>
</html>
